<div class="col-xs-12">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Score</th>
                <th>Skole</th>
                <th>Kolegier</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: schools">
            <tr>
                <td data-bind="text: amount"></td>
                <td data-bind="text: name"></td>
                <td>
                    <ul class="list-group" data-bind="foreach: houses">
                        <li class="list-group-item">
                            <span class="badge" data-bind="text: amount"></span>
                            <span data-bind="text: name"></span> 
                        </li>
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function() {
            ko.applyBindings(new Score.Index.App());
        });
    </script>
}
